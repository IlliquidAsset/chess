cat > .gitignore << 'EOF'
# Exclude sensitive data
.env

# Exclude Python cache files
__pycache__/
*.pyc

# Exclude output files while keeping folders
/output/*
!/output/games/
!/output/analysis/
!/output/logs/

# Exclude contents of subdirectories 


# Include placeholder files to maintain directory structure
!/output/games/.gitkeep
!/output/analysis/.gitkeep
!/output/logs/.gitkeep
EOF